<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="css/elements.css">
</head>
<body>
	<form action="/charge" method="post" id="payment-form">
	  <div class="group">
	    <label>
	      <span>Email</span>
	      <input name="email" class="field" placeholder="JaneLim@generalassemb.ly" />
	    </label>
	  </div>
	  <div class="group">
	    <label>
	      <span>Card</span>
	      <div id="card-element" class="field"></div>
	    </label>
	  </div>
	  <button type="submit">Pay</button>
	  <div class="outcome">
	    <div id="card-errors" role="alert"></div>
	    <div class="success">
	      Success! Your Stripe token is <span class="token"></span>
	    </div>
	  </div>
	</form>
	<script src="https://js.stripe.com/v3/"></script>
  <script id="elements" type="text/javascript" data-pk={{key}} src="js/elements.js"></script>
</body>


